generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TicketStatus {
  Pending
  Doing
  Reviewing
  Completed
}

model Ticket {
  id          String       @id @default(uuid()) @db.Uuid
  title       String
  description String
  status      TicketStatus @default(Pending)
  createdAt   DateTime     @default(now())
}